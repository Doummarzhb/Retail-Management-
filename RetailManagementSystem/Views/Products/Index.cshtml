@model IEnumerable<RetailManagementSystem.Models.Product>



<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a href="@Url.Action("Edit", "Products", new { id = item.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
