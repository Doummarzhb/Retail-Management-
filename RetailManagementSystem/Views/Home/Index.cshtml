@{
    ViewData["Title"] = "Welcome to Retail Management System";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h1 class="display-3 fw-bold text-primary">Retail Management System</h1>
        <p class="lead text-secondary">Manage your retail sales and financial reports effortlessly.</p>
        <a href="/Reports" class="btn btn-primary btn-lg mt-3">View Reports</a>
        <a href="/Products" class="btn btn-primary btn-lg mt-3">View Products</a>
        <a href="/Orders" class="btn btn-primary btn-lg mt-3">View Orders</a>
        <a href="/Users" class="btn btn-primary btn-lg mt-3">View Users</a>

    </div>

    <div class="row text-center">

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Sales Tracking</h5>
                    <p class="card-text">Track your daily sales and monitor your business performance in real time.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Financial Reports</h5>
                    <p class="card-text">Generate detailed financial reports to help you make smart business decisions.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Inventory Management</h5>
                    <p class="card-text">Keep your stock updated and optimize your inventory effortlessly.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Orders</h5>
                    <p class="card-text">Manage customer orders efficiently from placement to delivery.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Products</h5>
                    <p class="card-text">Add, update, and track your product catalog with ease.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Users</h5>
                    <p class="card-text">Manage user accounts and permissions securely.</p>
                </div>
            </div>
        </div>

    </div>

    <footer class="text-center mt-5 text-muted">
        &copy; @DateTime.Now.Year Retail Management System. All rights reserved.
    </footer>

</div>
